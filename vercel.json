{
  "version": 2,
  "builds": [
    {
      "src": "dev/controller/**/*.php",
      "use": "@vercel/php"
    },
    {
      "src": "public/**/*.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    {
      "src": "/dev/(.*)",
      "dest": "/dev/$1",
      "headers": {
        "Cache-Control": "no-store"
      }
    },
    {
      "src": "/public/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}